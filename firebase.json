{
  "functions": {
    "source": ".",
    "runtime": "nodejs18",
    "predeploy": [
      "npm install -g typescript",
      "npm install",
      "npm run build"
    ],
    "ignore": [      
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "*.local",
      ".env*",
      "demo.html",
      "get-token.html",
      "setup-firebase-env.ps1"
    ]
  },
  "hosting": {
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api"
      }
    ]
  },
  "apphosting": {
    "backendId": "c2-backend-api",
    "rootDir": "/",
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log",
      "functions"
    ]
  }
}
